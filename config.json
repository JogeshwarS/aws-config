{
    "agent": {
        "metrics_collection_interval": 60,
        "run_as_user": "root"
    },
    "metrics": {
        "metrics_collected": {
            "procstat": [
                {
                    "pattern": "--rpc-external",
                    "measurement": [
                        "cpu_usage"
                    ]
                }
            ],
            "mem": {
                "measurement": [
                    "mem_used_percent",
                    "mem_available_percent"
                ],
                "metrics_collection_interval": 60
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ],
                "metrics_collection_interval": 60,
                "resources": [
                    "/",
                    "/data"
                ]
            }
        }
    }
}
